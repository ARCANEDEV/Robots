{
    "name":        "arcanedev/robots",
    "description": "Robots.txt generator",
    "keywords":    ["arcanedev", "robots", "laravel"],
    "homepage":    "https://github.com/ARCANEDEV/Robots",
    "authors": [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/ARCANEDEV"
        }

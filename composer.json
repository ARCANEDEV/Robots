    "type":    "library",
    "license": "MIT",
    "require": {
        "php":                 ">=5.4.0",
        "illuminate/support":  "~4.2"
    },
    "require-dev": {
        "orchestra/testbench": "~2.2",
        "phpunit/phpcov":      "~2.0",
        "phpunit/phpunit":     "~4.0|~5.0"
    },
    "autoload": {
        "psr-4": {
            "Arcanedev\\Robots\\": "src/"
